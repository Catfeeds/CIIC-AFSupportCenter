<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.employmanagement.employcommandservice.dao.AmDataauthCompanyMapper">
    <resultMap id="ModelResultMap"
               type="com.ciicsh.gto.afsupportcenter.employmanagement.employcommandservice.bo.AmDataauthCompanyBO"
               extends="BaseResultMap">
    </resultMap>
    <!--查询限权客户by用户ID和组织ID-->
    <select id="queryListByUidAndSerCenterId" resultMap="ModelResultMap"
            parameterType="com.ciicsh.gto.afsupportcenter.employmanagement.employcommandservice.entity.AmDataauthCompany">
        SELECT
        s.id,
        s.user_id,
        s.service_center_id,
        s.company_id,
        s.created_time,
        s.modified_time,
        s.created_by,
        s.modified_by
        FROM
        am_dataauth_company s
        <where>
            <if test="userId != null">
                AND s.user_id = #{userId}
            </if>
            <if test="serviceCenterId != null">
                AND s.service_center_id = #{serviceCenterId}
            </if>
        </where>
    </select>


    <insert id="insertSsDataauthCompany" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.ciicsh.gto.afsupportcenter.employmanagement.employcommandservice.entity.AmDataauthCompany">
        INSERT
        INTO
        am_dataauth_company
       (
       user_id,
       service_center_id,
       company_id,
       created_time,
       modified_time,
       created_by,
       modified_by
       ) VALUES
        (
        #{user_id},
        #{service_center_id},
        #{company_id},
        #{created_time},
        #{modified_time},
        #{created_by},
        #{modified_by}
        )
    </insert>

    <delete id="delByUidAndSerCenterId"
            parameterType="com.ciicsh.gto.afsupportcenter.employmanagement.employcommandservice.entity.AmDataauthCompany">
        DELETE FROM am_dataauth_company WHERE user_id = #{userId} AND service_center_id = #{serviceCenterId}
    </delete>
</mapper>
