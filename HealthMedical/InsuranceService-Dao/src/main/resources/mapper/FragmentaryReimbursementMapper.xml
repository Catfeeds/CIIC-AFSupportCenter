<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.healthmedical.dao.FragmentaryReimbursementMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.ciicsh.gto.afsupportcenter.healthmedical.entity.po.FragmentaryReimbursementPO">
        <id column="id" property="id" />
        <result column="employee_id" property="employeeId" />
        <result column="employee_name" property="employeeName" />
        <result column="company_id" property="companyId" />
        <result column="company_name" property="companyName" />
        <result column="case_money" property="caseMoney" />
        <result column="invoice_number" property="invoiceNumber" />
        <result column="medical_remark" property="medicalRemark" />
        <result column="medical_clearing_money" property="medicalClearingMoney" />
        <result column="medical_clearing_feed_back" property="medicalClearingFeedBack" />
        <result column="is_active" property="isActive" />
        <result column="created_time" property="createdTime" />
        <result column="modified_time" property="modifiedTime" />
        <result column="created_by" property="createdBy" />
        <result column="modified_by" property="modifiedBy" />
	</resultMap>

    <select id="getById" resultMap="BaseResultMap">
        SELECT `id`, `employee_id`, `employee_name`,`company_id`,`company_name`, `case_money`, `invoice_number`, `medical_remark`, `medical_clearing_money`, `medical_clearing_feed_back`, `is_active`, `created_time`, `modified_time`, `created_by`, `modified_by`
        from gtobusinessdb.hm_fragmentary_reimbursement
        where id = #{id}
    </select>
    <select id="fragmentaryReimbursementMapperQuery" parameterType="com.ciicsh.gto.afsupportcenter.healthmedical.entity.dto.FragmentaryReimbursementDTO" resultMap="BaseResultMap">
        select  `id`, `employee_id`, `employee_name`,`company_id`,`company_name`,`case_money`, `invoice_number`, `medical_remark`, `medical_clearing_money`, `medical_clearing_feed_back`, `is_active`, `created_time`, `modified_time`, `created_by`, `modified_by`
        from  gtobusinessdb.hm_fragmentary_reimbursement
        <where>
            <if test="employeeId != null">
                and employee_id LIKE CONCAT('%',#{employeeId},'%')
            </if>
            <if test="employeeName != null">
                and employee_name LIKE CONCAT('%',#{employeeName},'%')
            </if>
            <if test="companyId != null">
                and company_id LIKE CONCAT('%',#{companyId},'%')
            </if>
            <if test="companyName != null">
                and company_name LIKE CONCAT('%',#{companyName},'%')
            </if>
        </where>
    </select>

	

</mapper>
