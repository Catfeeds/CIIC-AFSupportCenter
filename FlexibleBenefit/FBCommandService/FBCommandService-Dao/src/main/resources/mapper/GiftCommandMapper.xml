<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.flexiblebenefit.fbcommandservice.dao.GiftCommandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ciicsh.gto.afsupportcenter.flexiblebenefit.entity.po.GiftPO">
        <id column="id" property="id"/>
        <result column="gift_name" property="giftName"/>
        <result column="price" property="price"/>
        <result column="right_person" property="rightPerson"/>
        <result column="gift_type" property="giftType"/>
        <result column="color" property="color"/>
        <result column="number" property="number"/>
        <result column="apply_maxnum" property="applyMaxnum"/>
        <result column="picture_url" property="pictureUrl"/>
        <result column="remarks" property="remarks"/>
        <result column="status" property="status"/>
        <result column="new_tag" property="newTag"/>
        <result column="is_active" property="isActive"/>
        <result column="create_time" property="createTime"/>
        <result column="modified_time" property="modifiedTime"/>
        <result column="created_by" property="createdBy"/>
        <result column="modified_by" property="modifiedBy"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, gift_name, price, right_person, gift_type, color, `number`, apply_maxnum, picture_url,
        remarks, status, new_tag, is_active, create_time, modified_time, created_by, modified_by
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM fb_gift WHERE id = #{id,jdbcType=INTEGER}
    </select>

    <update id="updateByPrimaryKeySelective"
            parameterType="com.ciicsh.gto.afsupportcenter.flexiblebenefit.entity.po.GiftPO">
        update fb_gift
        <set>
            <if test="giftName != null">
                gift_name = #{giftName,jdbcType=VARCHAR},
            </if>
            <if test="price != null">
                price = #{price,jdbcType=DECIMAL},
            </if>
            <if test="rightPerson != null">
                right_person = #{rightPerson,jdbcType=TINYINT},
            </if>
            <if test="giftType != null">
                gift_type = #{giftType,jdbcType=TINYINT},
            </if>
            <if test="color != null">
                color = #{color,jdbcType=VARCHAR},
            </if>
            <if test="number != null">
                `number` = #{number,jdbcType=INTEGER},
            </if>
            <if test="applyMaxnum != null">
                apply_maxnum = #{applyMaxnum,jdbcType=INTEGER},
            </if>
            <if test="pictureUrl != null">
                picture_url = #{pictureUrl,jdbcType=VARCHAR},
            </if>
            <if test="remarks != null">
                remarks = #{remarks,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=TINYINT},
            </if>
            <if test="newTag != null">
                new_tag = #{newTag,jdbcType=BIT},
            </if>
            <if test="isActive != null">
                is_active = #{isActive,jdbcType=BIT},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="modifiedTime != null">
                modified_time = #{modifiedTime,jdbcType=TIMESTAMP},
            </if>
            <if test="createdBy != null">
                created_by = #{createdBy,jdbcType=VARCHAR},
            </if>
            <if test="modifiedBy != null">
                modified_by = #{modifiedBy,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>
