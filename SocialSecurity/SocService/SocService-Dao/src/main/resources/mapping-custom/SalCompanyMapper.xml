<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.socialsecurity.socservice.dao.SalCompanyMapper">

    <select id="companyQuery" resultMap="BaseResultMap">
        select * from sal_company c
        <where>
            and c.is_active = 1
            <if test="companyId != null">
                and c.company_id LIKE CONCAT('%',#{companyId},'%')
            </if>
            <if test="title != null">
                and c.title LIKE CONCAT('%',#{title},'%')
            </if>
        </where>
    </select>
</mapper>
