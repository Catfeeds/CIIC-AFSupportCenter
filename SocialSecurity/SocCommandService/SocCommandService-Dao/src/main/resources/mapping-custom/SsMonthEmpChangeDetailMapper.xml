<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.dao.SsMonthEmpChangeDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.entity.SsMonthEmpChangeDetail">
        <id column="month_emp_change_detail_id" property="monthEmpChangeDetailId" />
        <result column="month_emp_change_id" property="monthEmpChangeId" />
        <result column="employee_id" property="employeeId" />
        <result column="change_type" property="changeType" />
        <result column="change_type_name" property="changeTypeName" />
        <result column="base_amount" property="baseAmount" />
        <result column="ss_type" property="ssType" />
        <result column="ss_type_name" property="ssTypeName" />
        <result column="com_amount" property="comAmount" />
        <result column="emp_amount" property="empAmount" />
        <result column="com_compensate_amount" property="comCompensateAmount" />
        <result column="emp_compensate_amount" property="empCompensateAmount" />
        <result column="one_payment" property="onePayment" />
        <result column="is_active" property="isActive" />
        <result column="created_time" property="createdTime" />
        <result column="modified_time" property="modifiedTime" />
        <result column="created_by" property="createdBy" />
        <result column="modified_by" property="modifiedBy" />
    </resultMap>

    <resultMap id="DtoResultMap" type="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.dto.SsMonthEmpChangeDetailDTO">
        <id column="month_emp_change_detail_id" property="monthEmpChangeDetailId" />
        <result column="month_emp_change_id" property="monthEmpChangeId" />
        <result column="employee_id" property="employeeId" />
        <result column="employee_name" property="employeeName" />
        <result column="change_type" property="changeType" />
        <result column="change_type_name" property="changeTypeName" />
        <result column="base_amount" property="baseAmount" />
        <result column="ss_type" property="ssType" />
        <result column="ss_type_name" property="ssTypeName" />
        <result column="com_amount" property="comAmount" />
        <result column="emp_amount" property="empAmount" />
        <result column="com_compensate_amount" property="comCompensateAmount" />
        <result column="emp_compensate_amount" property="empCompensateAmount" />
        <result column="one_payment" property="onePayment" />
    </resultMap>

    <select id="serachMonthEmpChangeDetailByStatementId" parameterType="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.dto.SsMonthEmpChangeDTO" resultMap="DtoResultMap">
        SELECT
          T1.*,T3.employee_name
        FROM
          ss_month_emp_change_detail T1
          INNER JOIN
            ss_month_emp_change T2
          ON
            T2.month_emp_change_id = T1.month_emp_change_id
            AND T2.is_active = '1'
            AND T2.statement_id = #{statementId,jdbcType=VARCHAR}
          LEFT JOIN
            emp_employee T3
            ON
            T1.employee_id = T3.employee_id
        WHERE
            1=1
            AND T1.is_active = '1'
        ORDER BY
            T1.employee_id,T1.change_type,T1.ss_type
    </select>

    <select id="serachMonthEmpChangeDetailPOByStatementId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
          T1.*
        FROM
          ss_month_emp_change_detail T1
          INNER JOIN
            ss_month_emp_change T2
          ON
            T2.month_emp_change_id = T1.month_emp_change_id
          AND T2.is_active = '1'
          AND T2.statement_id = #{statementId,jdbcType=VARCHAR}
        WHERE
          1=1
          AND T1.is_active = '1'
    </select>


</mapper>
