<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.dao.SsAccountComRelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="ExtendResultMap" extends="BaseResultMap"
               type="com.ciicsh.gto.afsupportcenter.socialsecurity.soccommandservice.dto.SsAccountComRelationDTO">
        <result column="title" property="title"></result>
    </resultMap>
    <select id="queryByAccountId" resultMap="ExtendResultMap">
        SELECT
        scr.company_id,
        sc.title AS title
        FROM ss_account_com_relation scr
        LEFT JOIN sal_company sc ON scr.company_id = sc.company_id
        WHERE scr.com_account_id = #{comAccountId}
    </select>
</mapper>
